        <Button x:Name="LecturerSignIn" Content="Sign in as a Lecturer" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="114" Click="LecturerSignIn_Click" Margin="0,159,0,0"/>
        <Button x:Name="PCoordinatorAManagerSignIn" Content="Sign in as a Program Co-Ordinator/Academic Manager" HorizontalAlignment="Left" Margin="32,210,0,0" VerticalAlignment="Top" Height="40" Width="351" Click="PCoordinatorAManagerSignIn_Click"/>
        <Button x:Name="CreateAccount" Content="Create an account" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Height="40
    " Width="116" Click="CreateAccount_Click" />
        <Button x:Name="btnClose" Content="Exit" HorizontalAlignment="Center" Margin="0,278,0,0" VerticalAlignment="Top" Width="116" Height="40" Click="btnClose_Click"/>


    </Grid>
</Window>
